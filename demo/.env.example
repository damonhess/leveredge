# ARIA Demo Environment Configuration
# Copy this to .env and fill in values

# n8n Encryption Key (required)
# Generate with: openssl rand -hex 32
N8N_DEMO_ENCRYPTION_KEY=demo-key-change-in-production

# OpenAI API Key for demo
# Use a key with spending limits for demo safety
OPENAI_DEMO_API_KEY=sk-your-demo-api-key

# Optional: Cloudflare API token for Caddy TLS
CLOUDFLARE_API_TOKEN=your-cloudflare-token

# Demo configuration overrides (optional)
DEMO_SESSION_LIMIT_MINUTES=15
DEMO_MESSAGE_LIMIT=10
