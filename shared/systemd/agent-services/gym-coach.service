[Unit]
Description=GYM-COACH - Fitness & Training Agent
Documentation=https://github.com/leveredge/gym-coach
After=network.target event-bus.service
Wants=event-bus.service

[Service]
Type=simple
User=damon
Group=damon
WorkingDirectory=/opt/leveredge/control-plane/agents/gym-coach
Environment="PATH=/usr/local/bin:/usr/bin:/bin:/home/damon/.local/bin"
Environment="HOME=/home/damon"
Environment="EVENT_BUS_URL=http://localhost:8099"
ExecStart=/home/damon/.local/bin/uvicorn gym_coach:app --host 0.0.0.0 --port 8027
Restart=always
RestartSec=10

StandardOutput=journal
StandardError=journal
SyslogIdentifier=gym-coach

[Install]
WantedBy=multi-user.target
