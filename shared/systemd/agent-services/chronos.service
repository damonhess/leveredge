[Unit]
Description=CHRONOS - Time & Scheduling Agent
Documentation=https://github.com/leveredge/chronos
After=network.target event-bus.service
Wants=event-bus.service

[Service]
Type=simple
User=damon
Group=damon
WorkingDirectory=/opt/leveredge/control-plane/agents/chronos
Environment="PATH=/usr/local/bin:/usr/bin:/bin:/home/damon/.local/bin"
Environment="HOME=/home/damon"
Environment="EVENT_BUS_URL=http://localhost:8099"
ExecStart=/home/damon/.local/bin/uvicorn chronos:app --host 0.0.0.0 --port 8010
Restart=always
RestartSec=10

StandardOutput=journal
StandardError=journal
SyslogIdentifier=chronos

[Install]
WantedBy=multi-user.target
