[Unit]
Description=HERACLES - Physical Tasks & Labor Agent
Documentation=https://github.com/leveredge/heracles
After=network.target event-bus.service
Wants=event-bus.service

[Service]
Type=simple
User=damon
Group=damon
WorkingDirectory=/opt/leveredge/control-plane/agents/heracles
Environment="PATH=/usr/local/bin:/usr/bin:/bin:/home/damon/.local/bin"
Environment="HOME=/home/damon"
Environment="EVENT_BUS_URL=http://localhost:8099"
ExecStart=/home/damon/.local/bin/uvicorn heracles:app --host 0.0.0.0 --port 8032
Restart=always
RestartSec=10

StandardOutput=journal
StandardError=journal
SyslogIdentifier=heracles

[Install]
WantedBy=multi-user.target
