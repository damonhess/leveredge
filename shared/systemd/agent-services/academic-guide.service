[Unit]
Description=ACADEMIC-GUIDE - Education & Study Agent
Documentation=https://github.com/leveredge/academic-guide
After=network.target event-bus.service
Wants=event-bus.service

[Service]
Type=simple
User=damon
Group=damon
WorkingDirectory=/opt/leveredge/control-plane/agents/academic-guide
Environment="PATH=/usr/local/bin:/usr/bin:/bin:/home/damon/.local/bin"
Environment="HOME=/home/damon"
Environment="EVENT_BUS_URL=http://localhost:8099"
ExecStart=/home/damon/.local/bin/uvicorn academic_guide:app --host 0.0.0.0 --port 8030
Restart=always
RestartSec=10

StandardOutput=journal
StandardError=journal
SyslogIdentifier=academic-guide

[Install]
WantedBy=multi-user.target
