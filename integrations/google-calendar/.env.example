# Google Calendar Sync Configuration
# Copy to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection string
CALENDAR_SYNC_DATABASE_URL=postgresql://postgres:your_password@localhost:5432/leveredge

# Connection pool settings
CALENDAR_SYNC_DB_POOL_MIN=2
CALENDAR_SYNC_DB_POOL_MAX=10

# =============================================================================
# Google Calendar Settings
# =============================================================================

# Calendar ID to sync with (use 'primary' for the main calendar)
CALENDAR_SYNC_GOOGLE_CALENDAR_ID=primary

# Conflict resolution strategy
# Options: google_wins, aria_wins, most_recent, manual
CALENDAR_SYNC_CONFLICT_RESOLUTION=google_wins

# =============================================================================
# Webhook Configuration
# =============================================================================

# Base URL for webhook endpoint (must be HTTPS in production)
CALENDAR_SYNC_WEBHOOK_BASE_URL=https://calendar.leveredge.ai

# =============================================================================
# Server Settings
# =============================================================================

# Host to bind to
CALENDAR_SYNC_HOST=0.0.0.0

# Port to listen on
CALENDAR_SYNC_PORT=8068
