FROM python:3.11-slim

WORKDIR /app

# Install Docker CLI for log watching and git
RUN apt-get update && apt-get install -y \
    curl \
    docker.io \
    git \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    httpx \
    asyncio

COPY watcher.py .

CMD ["python", "watcher.py"]
